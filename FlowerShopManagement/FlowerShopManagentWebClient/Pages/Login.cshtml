@page
@model LoginModel
@if (ViewData["Message"] != null)
{
  <h3 style="color:red">@ViewData["Message"]</h3>
}
<div class="row">
  <div class="col-md-4">
    <section>
      <form id="account" method="post">

        <style>
          /* Center the form */
          .col-md-4 {
            margin: 80px auto; /* Adjust top margin as needed */
            width: 350px; /* Adjust width as desired */
          }

          /* Form container style */
          section {
            background-color: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
          }

          /* Input fields */
          input[type="text"],
          input[type="password"] {
            width: 100%; 
            padding: 12px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
          }

          /* Labels */
          label {
            font-weight: bold;
          }

          /* Submit button */
          .btn-primary {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
          }

          .btn-primary:hover {
            background-color: #0056b3;
          }

          /* Animation for form */
          section {
            opacity: 0;
          }

        </style>

        <h2>Use a local account to log in.</h2>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="form-floating mb-3">
          <input asp-for="@Model.email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
          <label asp-for="@Model.email" class="form-label">Email</label>
          <span asp-validation-for="@Model.email" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
          <input asp-for="@Model.password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
          <label asp-for="@Model.password" class="form-label">Password</label>
          <span asp-validation-for="@Model.password" class="text-danger"></span>
        </div>
        </form>
    </section>
  </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}